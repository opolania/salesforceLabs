    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage">
            <property name="searchTerm" type="String" default="" label="Término de búsqueda inicial" description="Valor inicial para el campo de búsqueda"/>
